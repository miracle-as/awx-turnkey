[Unit]
Description=AWX channels worker service
After=syslog.target network.target
PartOf=awx.service
After=awx.service

[Service]
User=awx
Group=awx
EnvironmentFile=-/etc/sysconfig/awx
Environment=AWX_SETTINGS_FILE=/etc/tower/settings.py
Environment=PATH=/bin:/sbin:/usr/bin:/usr/sbin:/var/awx/venv/bin
PermissionsStartOnly=true
ExecStartpre=mkdir /var/run/tower
ExecStartpre=mkdir chown awx:awx /var/run/tower
ExecStart={{ awx_venv }}/bin/awx-manage run_wsbroadcast
Restart=on-failure
RestartSec=2s

[Install]
WantedBy=awx.service

